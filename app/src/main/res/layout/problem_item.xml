<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/problemCard"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="8dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gradeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_send_black_24dp" />

        <TextView
            android:id="@+id/problemGradeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/gradeIcon"
            android:text="V6" />

        <ImageView
            android:id="@+id/attemptsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/problemGradeTextView"
            app:srcCompat="@drawable/ic_trending_flat_black_24dp" />

        <TextView
            android:id="@+id/problemAttemptsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/attemptsIcon"
            android:text="12" />

        <ImageView
            android:id="@+id/isTrainingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/problemAttemptsTextView"
            app:srcCompat="@drawable/ic_trending_flat_black_24dp" />

        <TextView
            android:id="@+id/problemIsTrainingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/isTrainingIcon"
            android:text="Yes" />

        <ImageView
            android:id="@+id/problemCompletedIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/problemIsTrainingTextView"
            app:srcCompat="@drawable/ic_trending_flat_black_24dp" />

        <TextView
            android:id="@+id/problemCompletedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/problemCompletedIcon"
            android:text="Yes" />

        <Button
            android:id="@+id/editProblemButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:onClick="goToViewHistory"
            android:text="edit" />

        <ImageView
            android:id="@+id/circuitNameIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/gradeIcon"
            android:layout_below="@+id/editProblemButton"
            app:srcCompat="@drawable/ic_done_black_24dp" />

        <TextView
            android:id="@+id/circuitNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/problemGradeTextView"
            android:layout_alignTop="@+id/circuitNameIcon"
            android:layout_marginTop="4dp"
            android:text="Blue" />

        <ImageView
            android:id="@+id/probleNumberIcov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circuitNameIcon"
            android:layout_toStartOf="@+id/problemNumberTextView"
            app:srcCompat="@drawable/ic_insert_emoticon_black_24dp" />

        <TextView
            android:id="@+id/problemNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/isTrainingIcon"
            android:layout_alignTop="@+id/probleNumberIcov"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="TextView" />


    </RelativeLayout>

</android.support.v7.widget.CardView>